<h1>My tasks</h1>



<% @tasks.each do |task| %>
  <h3>
  <% if task.completed? %>
   ☑️
  <% else %>
   ☐
  <% end %>
  <%= link_to task.title.capitalize, task_path(task) %> <%= link_to "🗑", delete_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
 </h3>
<% end %>
 <h3><%= link_to "➕ Add a new task", tasks_new_path %></h3>

